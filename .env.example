# StudyMate AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Gemini AI API Key (REQUIRED)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# ElevenLabs API Key (Optional - for premium voice synthesis)
# Get from: https://elevenlabs.io/
# If not provided, browser's built-in TTS will be used
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API Key (Optional - for alternative AI model)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to False for production)
DEBUG=True

# Server configuration
HOST=0.0.0.0
PORT=8080

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Upload directory (relative to project root)
UPLOAD_DIR=uploads

# Supported file extensions (comma-separated)
ALLOWED_EXTENSIONS=pdf,docx,pptx,txt,md,csv,json,xlsx,xls

# =============================================================================
# RAG (Retrieval-Augmented Generation) SETTINGS
# =============================================================================

# Embedding model for document processing
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Text chunking settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_QUERY=5

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database file path (SQLite)
DATABASE_PATH=studymate_v2.db

# Backup settings
DB_BACKUP_ENABLED=True
DB_BACKUP_INTERVAL_HOURS=24
DB_CLEANUP_OLD_DATA_DAYS=90

# =============================================================================
# VOICE SETTINGS
# =============================================================================

# Voice processing settings
VOICE_MODEL=base
VOICE_LANGUAGE=en
VOICE_TIMEOUT_SECONDS=30

# ElevenLabs voice settings (if using ElevenLabs)
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session settings
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=100

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/studymate.log

# Enable/disable specific loggers
LOG_AI_REQUESTS=True
LOG_FILE_UPLOADS=True
LOG_VOICE_PROCESSING=False

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Memory management
MAX_MEMORY_USAGE_MB=2048
CLEANUP_TEMP_FILES_MINUTES=30

# Concurrent processing
MAX_CONCURRENT_UPLOADS=5
MAX_CONCURRENT_AI_REQUESTS=3

# Cache settings
ENABLE_RESPONSE_CACHE=True
CACHE_TTL_SECONDS=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_VOICE_FEATURES=True
ENABLE_ANALYTICS=True
ENABLE_REMINDERS=True
ENABLE_EXPORT_FEATURES=True
ENABLE_COLLABORATIVE_FEATURES=False

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (only used when DEBUG=True)
DEV_AUTO_RELOAD=True
DEV_SHOW_DOCS=True
DEV_CORS_ORIGINS=*

# Testing settings
TEST_MODE=False
TEST_DATABASE_PATH=test_studymate.db

# =============================================================================
# NOTES
# =============================================================================

# 1. Only GEMINI_API_KEY is required for basic functionality
# 2. ElevenLabs API key is optional - browser TTS works without it
# 3. Set DEBUG=False for production deployment
# 4. Adjust MAX_FILE_SIZE_MB based on your server capacity
# 5. Keep your API keys secure and never commit them to version control